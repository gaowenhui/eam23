<PUBLIC:ATTACH EVENT="onfocus" ONEVENT="doOnFocus();"/>
<PUBLIC:ATTACH EVENT="onblur" ONEVENT="doOnBlur();"/> 

<SCRIPT LANGUAGE="JavaScript" TYPE="text/javascript"> 

