function doOnFocus() 
{            
       this.style.borderLeftStyle='groove'; 
       this.style.borderRightStyle='groove'; 
       this.style.borderTopStyle='groove'; 
       this.style.borderBottomStyle='groove';
       
}
function doOnBlur() 
{    
       this.style.borderLeftStyle='none'; 
       this.style.borderRightStyle='none'; 
       this.style.borderTopStyle='none'; 
       this.style.borderBottomStyle='none'; 
} 
 
//--> 

